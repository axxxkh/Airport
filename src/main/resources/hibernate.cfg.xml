<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/AIRPORT?serverTimezone=UTC
        </property>

        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">12345678</property>
        <property name="connection.pool_size">20</property>

        <property name="hbm2ddl.auto">none</property>
        <property name="show_sql">true</property>

        <mapping class="flightMicroService.entity.Aircraft"/>
        <mapping class="flightMicroService.entity.AircraftType"/>
        <mapping class="flightMicroService.entity.Airline"/>
        <mapping class="flightMicroService.entity.Flight"/>
        <mapping class="flightMicroService.entity.Gate"/>
        <mapping class="flightMicroService.entity.Passenger"/>
        <mapping class="flightMicroService.entity.Route"/>
        <mapping class="flightMicroService.entity.Terminal"/>
        <mapping class="flightMicroService.entity.Ticket"/>
        <mapping class="flightMicroService.entity.Personal"/>
        <mapping class="flightMicroService.entity.PersonalInfo"/>
        <mapping class="flightMicroService.entity.Salary"/>
        <mapping class="flightMicroService.entity.Passport"/>

    </session-factory>
</hibernate-configuration>